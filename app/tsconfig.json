{ 
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext", "dom.iterable"],
    "jsx": "react",
    "module": "esnext",
    "types": ["node", "jest", "@testing-library/jest-dom", "cypress"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "plugins": [{ "name": "ts-plugin-scss-modules" }],
  },
  "compilerConfig.lib": "dom",
  "include": ["./src/**/*", "styled.d.ts", "babel.config.js", "cypress"],
  "exclude": ["./cypress/e2e/spec.cy.ts"]
}